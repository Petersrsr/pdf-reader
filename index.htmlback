<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" href="favicon.png" type="image/x-icon">
  <title>乐队PDF 文件管理</title>
  <style>
    /* 全局样式 */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f9fafb;
      color: #333;
      max-width: 700px;
      margin: 40px auto;
      padding: 0 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #2c3e50;
      font-weight: 700;
      letter-spacing: 1.2px;
    }

    /* 上传区域 */
    #upload-form {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    #upload-form input[type="file"] {
      padding: 8px;
      border: 2px solid #3498db;
      border-radius: 6px;
      cursor: pointer;
      background: #fff;
      transition: border-color 0.3s ease;
    }
    #upload-form input[type="file"]:hover {
      border-color: #2980b9;
    }

    #upload-form button {
      background-color: #3498db;
      border: none;
      color: white;
      font-weight: 600;
      padding: 10px 18px;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    #upload-form button:hover {
      background-color: #2980b9;
    }

    /* PDF列表 */
    #pdf-list {
      list-style: none;
      padding: 0;
      margin: 0;
      border-top: 1px solid #ddd;
      border-radius: 6px;
      background: #fff;
      box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    }
    #pdf-list li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 14px 20px;
      border-bottom: 1px solid #eee;
      font-size: 16px;
      transition: background-color 0.2s ease;
    }
    #pdf-list li:hover {
      background-color: #f5f8fa;
    }
    #pdf-list li:last-child {
      border-bottom: none;
    }

    #pdf-list a {
      color: #2980b9;
      text-decoration: none;
      flex-grow: 1;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    #pdf-list a:hover {
      text-decoration: underline;
    }

    /* 删除按钮 */
    #pdf-list button {
      background-color: #e74c3c;
      border: none;
      color: white;
      padding: 6px 14px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      transition: background-color 0.3s ease;
      margin-left: 16px;
      flex-shrink: 0;
    }
    #pdf-list button:hover {
      background-color: #c0392b;
    }

    /* 响应式 */
    @media (max-width: 480px) {
      #upload-form {
        flex-direction: column;
        align-items: stretch;
      }
      #upload-form button {
        width: 100%;
      }
      #pdf-list li {
        flex-direction: column;
        align-items: flex-start;
      }
      #pdf-list button {
        margin-left: 0;
        margin-top: 8px;
      }
      #pdf-list a {
        white-space: normal;
      }
    }
  </style>
</head>
<body>

  <h1>乐队PDF 文件管理</h1>

  <form id="upload-form">
    <input type="file" name="pdffile" accept="application/pdf" required />
    <button type="submit">上传 PDF</button>
  </form>

  <ul id="pdf-list"></ul>

  <script>
    const pdfList = document.getElementById('pdf-list');
    const uploadForm = document.getElementById('upload-form');

    async function loadPdfList() {
      try {
        const res = await fetch('list.php');
        const files = await res.json();
        pdfList.innerHTML = '';
        files.forEach(file => {
          const li = document.createElement('li');

          const a = document.createElement('a');
          a.href = 'yuedu.html?file=' + encodeURIComponent(file);
          a.textContent = file;
          li.appendChild(a);

          const delBtn = document.createElement('button');
          delBtn.textContent = '删除';
          delBtn.onclick = async () => {
            if (confirm(`确认删除文件 "${file}" 吗？`)) {
              try {
                const res = await fetch('delete.php', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ filename: file }),
                });
                const result = await res.json();
                alert(result.message);
                if (result.success) {
                  loadPdfList();
                }
              } catch (e) {
                alert('删除请求失败');
                console.error(e);
              }
            }
          };
          li.appendChild(delBtn);

          pdfList.appendChild(li);
        });
      } catch (e) {
        console.error('加载列表失败', e);
      }
    }

    uploadForm.addEventListener('submit', async e => {
      e.preventDefault();
      const formData = new FormData(uploadForm);

      try {
        const res = await fetch('upload.php', {
          method: 'POST',
          body: formData,
        });
        const result = await res.json();
        alert(result.message);
        if (result.success) {
          loadPdfList();
          uploadForm.reset();
        }
      } catch (e) {
        alert('上传失败');
        console.error(e);
      }
    });

    loadPdfList();
  </script>

</body>
<footer style="text-align: center; padding: 20px 0; font-size: 14px; color: #666; background-color: #f9f9f9; margin-top: 40px;">
